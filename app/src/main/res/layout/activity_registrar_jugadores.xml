<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.RegistrarJugadores">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Jugadores"
                android:fontFamily="@font/delvue"
                android:textSize="48dp"
                android:textAlignment="center"
                android:gravity="center"
                />

        </LinearLayout>

        <ListView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.4"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imageButtonLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@mipmap/paperleft"
                app:srcCompat="@mipmap/paperleft"

                />


            <ImageButton
                android:id="@+id/imageButtonRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"


                android:background="@mipmap/paperright"
                app:srcCompat="@mipmap/paperright" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>